@import 'vars.styl'
@import '../breakpoints/_index.styl'

for $breakpoint, $breakpoint-value in $screen-breakpoints
  @media screen and (min-width: $breakpoint-value)
    for $size, $padding-value in $padding-sizes
      for $dir, $dir-value in $padding-directions
        .{$padding-prefix}{$dir}-{$breakpoint}-{$size}
          {$dir-value}: $padding-value
